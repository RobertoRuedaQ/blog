<h1 class="title">
<%= @post.title  %>
</h1>
<p class="date">
	Submmited by <%= @post.name %> <%= time_ago_in_words(@post.created_at) %> Ago. | <%= link_to "Delete", post_path(@post), method: :delete,  data: {confirm: "Are you sure you want to delete the post?"} %> | <%= link_to "Edit", edit_post_path(@post) %>
</p>
<p class="body">
	<%= @post.body %>
</p>

<p><strong>This post has <%= @post.comments.count%> comments</strong></p>
	<%= render @post.comments %>

<p><strong>Add  a comments</strong></p>

	<%= render "comments/form" %>

