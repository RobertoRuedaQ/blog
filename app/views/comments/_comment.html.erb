<div class="panel">
	<div class="panel-heading">
	<p><strong><%= comment.name  %></strong> commented <%= time_ago_in_words(comment.created_at)%> Ago. </p>
	
	</div>	
	<div class="panel-body">
	  <%= comment.body %>
	</div>
	<% if user_signed_in? %>
	<p><%= link_to "Delete", [comment.post, comment], method: :delete, class: "button", data:{confirm: "Are yoy sure you want to delete it?"} %></p>
	<% end %>
</div>